<!doctype html>
<html lang="en" ng-controller="AppCtrl" ng-app="myApp" ng-class="{locked: appState.menu.isVisible}">
<head>
    <meta charset="utf-8">
    <title>Socket Chat</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />

    <link type="text/css" media="all" rel="stylesheet" href="css/style.css"/>

    <link rel="shortcut icon" href="assets/favicon.ico">
    <link rel="apple-touch-icon" sizes="72x72" href="assets/apple-touch-icon-72x72.png">
    <link rel="apple-touch-icon" sizes="114x114" href="assets/apple-touch-icon-114x114.png">

    <!-- Provide authentication status for initial load -->
    <script>window.myApp={user:<%-JSON.stringify(user)%>};</script>

</head>
<body ng-class="{touch: appState.touchDevice}">

    <!-- System Messages -->
    <div ng-include="'views/messages.html'"></div>

    <!-- Menu -->
    <div ng-include="'views/menu.html'" class="off-canvas-menu"></div>

    <!-- Off-canvas wrapper -->
    <div class="off-canvas" ng-class="{uncover: appState.menu.isVisible}">

        <!-- Blur background -->
        <div class="blur-bg" ng-cloak ng-show="appState.blur"></div>

        <!-- Header -->
        <div ng-include="'views/header.html'"></div>

        <!-- Page Container -->
        <div class="pages-container">

            <!-- pulsars -->
            <div class="pulsars" ng-show="!appState.blur">
                <div ng-include="'views/pulsar.html'" class="pulsar pulsar1"></div>
                <div ng-include="'views/pulsar.html'" class="pulsar pulsar2"></div>
                <div ng-include="'views/pulsar.html'" class="pulsar pulsar3"></div>
            </div>

            <div ng-view class="page-wrapper" ng-class="pageAnimationClass"></div>
        </div>

    </div>

    <!-- Footer -->
    <div ng-include="'views/footer.html'" class="page-footer hide-for-small"></div>

    <!-- Vendor Libraries -->
    <!-- build:js js/vendor.js -->
    <script src="lib/jquery/jquery.min.js"></script>
    <script src="lib/angular/angular.js"></script>
    <script src="lib/angular-sanitize/angular-sanitize.js"></script>
    <script src="lib/angular-route/angular-route.js"></script>
    <script src="lib/angular-resource/angular-resource.js"></script>
    <script src="lib/angular-animate/angular-animate.js"></script>
    <script src="lib/fastclick/lib/fastclick.js"></script>
    <script src='/socket.io/socket.io.js'></script>
    <!-- endbuild -->

    <!-- Application JS -->
    <!-- build:js js/app.js -->
    <script src="js/services.js"></script>
    <script src="js/controllers.js"></script>
    <script src="js/filters.js"></script>
    <script src="js/directives.js"></script>
    <script src="js/app.js"></script>
    <!-- endbuild -->

    <!-- Inject the live reload script if this is running in the dev environment -->
    <% if (env === 'development') { %>
    <script src="http://localhost:35729/livereload.js"></script>
    <% } %>
</body>
</html>
